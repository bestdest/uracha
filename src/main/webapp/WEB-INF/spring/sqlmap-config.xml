<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
	<settings>
		<setting name="cacheEnabled" value="false"/>
		<!-- <setting name="localCacheScope" value="SESSION"/> -->
	</settings>
	<typeHandlers>
		<typeHandler handler="com.urachacha.maker.utils.CLOBHandler" javaType="String" jdbcType="LONGVARCHAR"/>
	</typeHandlers>
	<mappers>
    	<!-- SQL이 들어있는 파일을 매핑하기 위한 부분-->
		<mapper resource="META-INF/sqlmap/mappings/post.xml" />
	</mappers>
	 
</configuration>
